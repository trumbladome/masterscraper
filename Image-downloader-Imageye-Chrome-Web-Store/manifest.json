{
"update_url": "https://clients2.google.com/service/update2/crx",

  "manifest_version": 3,
  "name": "__MSG_appName__",
  "short_name": "Imageye",
  "description": "__MSG_appDesc__",
  "default_locale": "en",
  "version": "5.9.4",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  },
  "action": {
    "default_icon": "imageye128.png"
  },
  "permissions": ["activeTab", "downloads", "storage", "webRequest", "scripting", "declarativeNetRequest", "sidePanel"],
  "host_permissions": ["http://*/*", "https://*/*", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "icons": { "128": "imageye128.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "exclude_matches": ["*://*/*.json", "*://*/*.pdf", "*://*/*.jpeg", "*://*/*.jpg", "*://*/*.png", "*://*/*.svg"],
      "js": ["inject.js"]
    }
  ]
}
