{
  "manifest_version": 3,
  "name": "STEPTWO V2",
  "description": "Scraper + DownThemAll! powered bulk downloader",
  "version": "0.1.0",
  "permissions": [
    "downloads",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "action": {
    "default_popup": "ui/popup.html",
    "default_title": "STEPTWO"
  },
  "options_page": "ui/options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/injector.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}